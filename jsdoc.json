{
	"tags": {
		"allowUnknownTags": true,
		"dictionaries": [
			"jsdoc",
			"closure"
		]
	},
	"source": {
		"include": [
			"source"
		],
		"includePattern": ".+\\.js(doc)?$",
		"excludePattern": "(^|\\/|\\\\)_"
	},
	"opts": {
		"template": "./../tidy-jsdoc",
		"encoding": "utf8",
		"destination": "./docs/",
		"recurse": true,
		"prism-theme": "prism-tomorrow-night"
	},
	"plugins": [
		"plugins/markdown",
		"plugins/summarize"
	],
  "styles": {
    "text-color": "#111",
		"subheading-color": "#111",
		"nav-width": "280px",
		"nav-bg-color": "#0078D4",
		"nav-link-color": "#fff",
		"nav-heading-color": "#eee",
		"nav-text-color": "#ccc",
		"nav-title-color": "#fff",
		"nav-title-align": "left",
		"nav-title-size": "2em"
  },
	"templates": {
		"cleverLinks": false,
		"monospaceLinks": false
	},
	"metadata": {
		"title": "blocklift.js"
	}
}
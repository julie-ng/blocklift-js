{
	"tags": {
		"allowUnknownTags": true,
		"dictionaries": [
			"jsdoc",
			"closure"
		]
	},
	"source": {
		"include": [
			"source"
		],
		"includePattern": ".+\\.js(doc)?$",
		"excludePattern": "(^|\\/|\\\\)_"
	},
	"opts": {
		"template": "./node_modules/tidy-jsdoc",
		"encoding": "utf8",
		"destination": "./docs/",
		"recurse": true
	},
	"plugins": [
		"plugins/markdown",
		"plugins/summarize"
	],
  "styles": {
    "text-color": "#111",
    "subheading-color": "#111"
  },
	"templates": {
		"cleverLinks": false,
		"monospaceLinks": false
	},
	"metadata": {
		"title": "blocklift.js"
	}
}